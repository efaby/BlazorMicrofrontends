    private void SelectCustomer(Customer customer)
    {
        var customerEvent = new CustomerSelectedEvent(
        customer.Id,
        customer.Name,
        customer.Email,
        DateTime.Now
        );

        EventAggregator.Publish(customerEvent);

        var notification = new NotificationEvent(
        $"Cliente '{customer.Name}' seleccionado",
        NotificationType.Info,
        DateTime.Now
        );

        EventAggregator.Publish(notification);
    }

    private void ShowAddCustomerModal()
    {
        var notification = new NotificationEvent(
        "Función 'Nuevo Cliente' en desarrollo",
        NotificationType.Warning,
        DateTime.Now
        );

        EventAggregator.Publish(notification);
    }
