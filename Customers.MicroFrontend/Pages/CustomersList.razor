@page "/customers"
@using Shared.Contracts.Events
@using Shared.Contracts.Models
@using Shared.Contracts.Communication
@inject IEventAggregator EventAggregator

<PageTitle>Clientes</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h3 class="text-primary">
                <i class="bi bi-people"></i> Gestión de Clientes
            </h3>
        </div>
        <div class="col-auto">
            <button class="btn btn-success" @onclick="ShowAddCustomerModal">
                <i class="bi bi-person-plus"></i> Nuevo Cliente
            </button>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Email</th>
                            <th>Teléfono</th>
                            <th>Dirección</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var customer in customers)
                        {
                            <tr>
                                <td><strong>@customer.Id</strong></td>
                                <td>@customer.Name</td>
                                <td>
                                    <a href="mailto:@customer.Email">@customer.Email</a>
                                </td>
                                <td>@customer.Phone</td>
                                <td>@customer.Address</td>
                                <td>
                                    <button class="btn btn-sm btn-info me-2" @onclick="() => SelectCustomer(customer)">
                                        <i class="bi bi-eye"></i> Ver
                                    </button>
                                    <button class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil"></i> Editar
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <span class="text-muted">Total de clientes: @customers.Count</span>
    </div>
</div>

